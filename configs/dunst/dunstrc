[global]
    monitor = 0
    follow = keyboard

    width = 400
    height = (0, 300)

    origin = top-right
    offset = (20, 20)
    scale = 0
    notification_limit = 20

    progress_bar = true
    progress_bar_height = 10
    progress_bar_frame_width = 0
    progress_bar_min_width = 150
    progress_bar_max_width = 400
    progress_bar_corner_radius = 0

    icon_corner_radius = 0
    indicate_hidden = yes
    transparency = 0
